# SAIA Wazen Chatbot Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secure-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SAIA System Database (PostgreSQL) - Main application database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=saia_db
DB_USER=saia_user
DB_PASSWORD=your-secure-db-password
DB_HOST=localhost
DB_PORT=5432

# Client Data Source Database (MySQL) - Read-only customer data
CLIENT_DB_ENGINE=django.db.backends.mysql
CLIENT_DB_NAME=customer_db
CLIENT_DB_USER=customer_user
CLIENT_DB_PASSWORD=your-secure-client-db-password
CLIENT_DB_HOST=localhost
CLIENT_DB_PORT=3306

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_URL=redis://localhost:6379/1

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Groq API (Primary AI Provider)
GROQ_API_KEY=your-groq-api-key-here
GROQ_BASE_URL=https://api.groq.com/openai/v1

# Together AI (Backup AI Provider)
TOGETHER_API_KEY=your-together-ai-api-key-here
TOGETHER_BASE_URL=https://api.together.xyz/v1

# Ollama (Local LLM - Optional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI (Optional)
# OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# PHOENIX OBSERVABILITY
# =============================================================================
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006
PHOENIX_PROJECT_NAME=saia-business-system
PHOENIX_API_KEY=your-phoenix-api-key-if-needed

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_APP_ID=your-app-id
WHATSAPP_APP_SECRET=your-app-secret
WHATSAPP_VERIFY_TOKEN=your-verify-token

# =============================================================================
# WIDGET SECURITY SETTINGS
# =============================================================================
WIDGET_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
WIDGET_RATE_LIMITING_ENABLED=True

# =============================================================================
# STATIC FILES & MEDIA
# =============================================================================
STATIC_URL=/static/
MEDIA_URL=/media/

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
DJANGO_LOG_LEVEL=INFO
DJANGO_DB_LOG_LEVEL=WARNING

# =============================================================================
# HUAWEI CLOUD SPECIFIC (for production deployment)
# =============================================================================
# Uncomment and configure these for Huawei Cloud deployment

# Database URLs (if using cloud databases)
# DATABASE_URL=postgresql://user:password@host:port/dbname
# CLIENT_DATABASE_URL=mysql://user:password@host:port/dbname

# Redis URL (if using cloud Redis)
# REDIS_URL=redis://user:password@host:port/db

# Object Storage (if using Huawei OBS)
# OBS_ACCESS_KEY_ID=your-obs-access-key
# OBS_SECRET_ACCESS_KEY=your-obs-secret-key
# OBS_BUCKET_NAME=your-bucket-name
# OBS_REGION=your-region

# CDN Configuration
# CDN_URL=https://your-cdn-domain.com

# SSL/Security Settings
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
